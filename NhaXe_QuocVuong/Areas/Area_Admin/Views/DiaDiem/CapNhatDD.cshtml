
@{
    ViewBag.Title = "CapNhatDD";
    Layout = "~/Areas/Area_Admin/Views/Shared/LayoutAdmin.cshtml";
}

@model NhaXe_QuocVuong.Models.DiaDiem
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header text-center mb-4 bg-primary text-white">
                    <h3>CẬP NHẬT ĐỊA ĐIỂM</h3>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group mb-4">
                            @Html.LabelFor(m => m.TEN_TINH_THANH, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(m => m.TEN_TINH_THANH, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.TEN_TINH_THANH, "", new { @class = "text-danger" })
                        </div>
                        <div class="d-flex justify-content-between">
                            <div class="form-group mb-4">
                                <input type="hidden" name="ID_DIADIEM" value="@Model.ID_DIADIEM" />
                                <button type="submit" class="btn btn-success px-4">Cập Nhật</button>
                                @Html.ActionLink("Quay Lại", "DanhSachDD", null, new { @class = "btn btn-secondary px-4" })
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function() {
        @if (ViewBag.Message != null)
        {
            <text>
                Swal.fire({
                    icon: 'success',
                    title: 'Thành công!',
                    text: '@ViewBag.Message',
                    confirmButtonText: 'Đóng'
                });
            </text>
        }
    });
</script>
<!-- Thêm biểu tượng và CSS từ Bootstrap -->
<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
      integrity="sha512-Fo3rlrZj/k7ujTTXrw3fQA7AqMy2z0GF6zOvYlxP1FQY5K3d8QodW9i2FA+o/fGz9cPqU77Gt6y3KpHp8MEeQ=="
      crossorigin="anonymous" referrerpolicy="no-referrer" />

<style>
    body {
        background-color: #f0f2f5;
        font-family: 'Arial', sans-serif; /* Thay đổi font chữ toàn bộ trang */
    }

    .card {
        border-radius: 10px;
    }

    .form-label {
        font-weight: 600;
    }

    .btn-success {
        background-color: #28a745;
        border: none;
        transition: background-color 0.3s ease; /* Hiệu ứng chuyển màu khi hover */
    }

        .btn-success:hover {
            background-color: #218838;
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
        transition: background-color 0.3s ease; /* Hiệu ứng chuyển màu khi hover */
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }
</style>



