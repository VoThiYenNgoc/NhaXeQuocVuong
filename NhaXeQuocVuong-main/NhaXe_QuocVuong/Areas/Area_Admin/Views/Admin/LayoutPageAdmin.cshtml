<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Dashboard</title>

    <!-- CSS Bootstrap và FontAwesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/fontawesome-free-6.6.0-web/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            display: flex;
            min-height: 100vh;
            flex-direction: column;
        }

        .wrapper {
            display: flex;
            flex: 1;
        }

        /* Định dạng chung cho header và sidebar */
        .bg-gradient {
            background: linear-gradient(#ffd800, #ff6a00, #ff0000);
            color: white;
        }

        .sidebar {
            width: 250px;
        }

            .sidebar a {
                color: white;
                padding: 15px;
                text-decoration: none;
                display: block;
            }

                .sidebar a:hover {
                    background-color: rgba(255, 255, 255, 0.1);
                }

        .content {
            flex: 1;
            padding: 20px;
        }

        footer {
            background-color: #D3D3D3;
            color: white;
            text-align: center;
            padding: 10px;
        }
        .footer h5 {
            color: orangered;
            margin-bottom: 15px;
        }

        .footer a {
            text-decoration: none;
            transition: color 0.3s;
        }

            .footer a:hover {
                color: #ffd700;
            }

        .footer iframe {
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="bg-gradient p-3">
        <div class="container d-flex justify-content-between">
            <div class="d-flex align-items-center">
                <img src="~/img/logo3.png" alt="Logo" style="height: 40px; margin-right: 10px;">
                <h3>Admin</h3>
            </div>
            <div>
                <span><a href="#" class="text-white">Đăng nhập</a></span> |
                <a href="#" class="text-white">Đăng xuất</a>
            </div>
        </div>
    </header>

    <div class="wrapper">
        <!-- Sidebar -->
        <nav class="sidebar bg-gradient">
            <h5 class="p-3">Quản lý hệ thống</h5>
            <a href="#"><i class="fas fa-home"></i> Trang chủ</a>
            <a href="#"><i class="fas fa-user"></i> Nhân viên</a>
            <a href="#"><i class="fas fa-users"></i> Khách hàng</a>
            <a href="#"><i class="fas fa-road"></i> Tuyến đường</a>
            <a href="#"><i class="fas fa-calendar-alt"></i> Lịch trình</a>
            <a href="#"><i class="fas fa-ticket-alt"></i> Quản lý vé</a>
            <a href="#"><i class="fas fa-chart-line"></i> Doanh thu</a>
            <a href="#"><i class="fas fa-bus"></i> Quản lý xe</a>
        </nav>

        <!-- Content -->
        <main class="content">
            @RenderBody()
        </main>
    </div>
    <!--footer-->
    <div class="footer bg-dark text-white pt-4 pb-3">
        <div class="container">
            <div class="row">
                <!-- Thông tin liên hệ và CSKH -->
                <div class="col-md-4 mb-3">
                    <h5 class="text-uppercase">Trung tâm Tổng đài & CSKH</h5>
                    <h2 class="text-warning">0123456789</h2>
                    <p>Công ty cổ phần xe khách Quốc Vương</p>
                    <p><strong>Địa chỉ:</strong> Số 01 Tô Hiến Thành, Phường 3, Đà Lạt, Lâm Đồng, Việt Nam.</p>
                    <p><strong>Email:</strong> hotro@futa.vn</p>
                    <p><strong>Điện thoại:</strong> 02838386852</p>
                    <p><strong>Fax:</strong> 02838386853</p>
                </div>

                <!-- Kết nối và liên kết nhanh -->
                <div class="col-md-4 mb-3">
                    <h5 class="text-uppercase">Liên kết nhanh</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-white">Liên hệ</a></li>
                        <li><a href="#" class="text-white">Về chúng tôi</a></li>
                        <li><a href="#" class="text-white">Tin tức</a></li>
                        <li><a href="#" class="text-white">Sự kiện</a></li>
                    </ul>
                    <h5 class="mt-4">Kết nối với chúng tôi</h5>
                    <div>
                        <a href="#" class="text-white mr-3"><i class="fab fa-facebook fa-xl"></i></a>
                        <a href="#" class="text-white mr-3"><i class="fab fa-youtube fa-xl" style="color: red;"></i></a>
                        <a href="#" class="text-white mr-3"><i class="far fa-envelope fa-xl"></i></a>
                        <a href="#" class="text-white mr-3"><i class="fab fa-facebook-messenger fa-xl" style="color: #74C0FC;"></i></a>
                        <a href="#" class="text-white"><i class="fab fa-instagram fa-xl"></i></a>
                    </div>
                </div>

                <!-- Bản đồ Google Maps -->
                <div class="col-md-4 mb-3">
                    <h5 class="text-uppercase">Vị trí công ty</h5>
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.062458818284!2d106.62637497407049!3d10.80652835863974!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752be2804c5ea3%3A0x299b8ad71d268338!2zMTQwIMSQLiBMw6ogVHLhu41uZyBU4bqlbiwgVMOieSBUaOG6oW5oLCBUw6JuIFBow7osIEjhu5MgQ2jDrCBNaW5oLCBWaeG7h3QgTmFt!5e0!3m2!1svi!2s!4v1727935838027!5m2!1svi!2s"
                            width="100%" height="250" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade">
                    </iframe>
                </div>
            </div>
        </div>
    </div>

    @*--------------------------------------------end-footer-----------------------------------------------------*@


    <script src="~/Content/js/bootstrap.bundle.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
    <script src="~/Scripts/jsBackToTop.js"></script>
    @RenderSection("scripts", required: false)

    <!-- JavaScript -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>